{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
    <h1>Article 一覧</h1>

    <a class="waves-effect waves-light btn" href="{{ path('articles_create') }}">作成画面</a>

    <div class="m-t-5">
        {% if articles is empty %}
            <p>Article はありません</p>
        {% else %}
            <ul class="collection">
                {% for article in articles %}
                    <li>
                        <a class="collection-item" href="{{ path('articles_show', {id: article.id}) }}">
                            {{ article.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endblock %}
